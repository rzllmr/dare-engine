{
  "name": "pixi-engine",
  "version": "0.3.0",
  "description": "Simple game engine in TypeScript using pixi.js",
  "author": "rzllmr",
  "license": "MIT",
  "scripts": {
    "version": "shx echo $npm_package_version.$(git rev-list --count main) > static/version.txt",
    "start": "webpack serve --mode=development",
    "build": "run-s version clean build-only zip",
    "build-only": "webpack --mode=production",
    "clean": "rimraf dist",
    "test": "npm-run-all --parallel tsc lint jest",
    "format": "prettier --config .prettierrc.json 'src/**/*.ts' --write",
    "zip": "cd dist; zip -qr dare_$(cat version.txt).zip *"
  },
  "dependencies": {
    "@tweenjs/tween.js": "^23.1.1",
    "pixi.js": "^7.1.1",
    "yaml": "^2.2.1"
  },
  "devDependencies": {
    "@types/jest": "^29.2.6",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard-with-typescript": "^31.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.1",
    "shx": "^0.3.4",
    "terser-webpack-plugin": "^5.3.6",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  }
}
