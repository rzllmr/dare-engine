{
  "name": "dare-engine",
  "version": "0.4.4",
  "description": "Humble game engine in TypeScript using PixiJS",
  "author": "rzllmr",
  "license": "MIT",
  "scripts": {
    "engine-version": "shx echo $npm_package_version-$(git rev-parse --short HEAD) > deploy/version.txt",
    "template-version": "cd deploy; npm version $npm_package_version --allow-same-version",
    "version": "run-s engine-version template-version",
    "start": "webpack serve --mode=development",
    "build": "run-s version clean build-only fix-exe zip tgz",
    "build-only": "webpack --mode=production",
    "clean": "rimraf dist",
    "test": "tsc; eslint .; jest",
    "format": "prettier --config .prettierrc.json 'src/**/*.ts' --write",
    "fix-exe": "cd dist; chmod 755 run.command",
    "zip": "cd dist; zip -qr dare_$(cat version.txt).zip *; mv *.zip ..",
    "tgz": "cd dist; tar -czf dare_$(cat version.txt).tgz *; mv *.tgz ..",
    "docs": "cd docs; bundle exec jekyll serve",
    "wasm": "cd src/fast/wasm; wasm-pack build --target web"
  },
  "dependencies": {
    "@tweenjs/tween.js": "^25.0.0",
    "handlebars": "^4.7.8",
    "inkjs": "^2.3.1",
    "pixi.js": "^8.6.6",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/parser": "^8.20.0",
    "copy-webpack-plugin": "^12.0.2",
    "eslint": "^9.18.0",
    "eslint-plugin-n": "^17.15.1",
    "globals": "^15.14.0",
    "handlebars-loader": "^1.7.3",
    "html-webpack-plugin": "^5.6.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "shx": "^0.3.4",
    "terser-webpack-plugin": "^5.3.11",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0"
  }
}
